<WeatherScreen>:
    orientation: 'vertical'
    Button:
        text: "reload weather"
        id: "weather_reload"
        font_size: '25sp'
        background_color: (1.0, 0.0, 0.0, 1.0)
        on_press: root.reload()
    GridLayout:
        cols: 3
        rows: 1
        LabelWithBackground:
            canvas.before:
                Rectangle:
                    pos: self.pos
                    size: self.size
                    # source: "tmp.jpg" Add background pics
            text: "Loading ..."
            color: 1,0,0,1
            font_size: '30sp'
            id: temp
            texture: "tmp.jpg"
        Label:
            text: "Loading ..."
            font_size: '25sp'
            id: hum
        Label:
            text: "Loading ..."
            font_size: '25sp'
            id: wind
